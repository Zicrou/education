<h1>Departements</h1><br\><br\><br\>
<br>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departements.each do |departement| %>
      <tr>
        <td><%= departement.name %></td>
        <td><%= departement.region %></td>
        <td><%= link_to 'Show', departement %></td>
        <td><%= link_to 'Edit', edit_departement_path(departement) %></td>
        <td><%= link_to 'Destroy', departement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


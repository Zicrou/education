<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %></h2>

  	<nav class="breadcrumb">
	    <%#= link_to "Cours", blog_path, class: 'breadcrumb-item' %>
	    <%= link_to @blog.niveau.name, niveau_path(@blog.niveau), class: 'breadcrumb-item' %>
	    <%= link_to @blog.filiere.name, filiere_path(@blog.filiere), class: 'breadcrumb-item' %>
	    <%= link_to @blog.domaine.name, domaine_path(@blog.domaine), class: 'breadcrumb-item' %>

	    <span class="breadcrumb-item active" ><%= @blog.title %></span>

	    <span class="" style="margin-left: auto;">
	      <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog) if logged_in?(:site_admin, :professeur, :censeur, :principale, :proviseur)%>
	      <%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Are you sure you want to delete this post' } if logged_in?(:site_admin) %>
	    </span>
  	</nav>


	<p>
		<%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin, :professeur, :censeur, :principale, :proviseur) %> |
		<%= link_to 'Retour', blogs_path %>
	</p> 

	<p>
	Tags:
		<% @blog.tags.each do |tag| %>
			<%= link_to tag.name, tag_path(tag) %>
		<% end %>
	</p>
	
	<p>
		<%= markdown(@blog.body) %>
	</p>

	<p>
		<%= image_tag @blog.image, width:"100px" %>
	</p>

	<!-- Start of comment form -->
	<%#= render 'comments/comment_form' %>
	<!-- End of comment form -->


	<!-- Start of comments -->
	<!--div id="comments" data-blog-id="<%= @blog.id %>" >
		<%#= render @blog.comments %>
	</div!-->
	<!-- End of comments -->

</div>